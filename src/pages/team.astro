---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import team from "../data/team.json";
---

<Layout>
<div class="py-12 max-w-4xl mx-auto">
    <h1 class="text-4xl font-extrabold text-gray-800 mb-8 text-center">Our Team</h1>
    
    <div class="space-y-8">
      {team.map(member => (
        <div class="bg-white shadow-md rounded-2xl p-6 flex space-x-6 hover:shadow-lg">
          <!-- Profile Picture -->
          <img 
            src={member.picture} 
            alt={`${member.name} Profile Picture`} 
            class="w-24 h-24 rounded-full object-cover border-2 border-blue-600"
          />
          
          <div class="flex-1">
            <h2 class="text-2xl font-semibold text-gray-800">{member.name}</h2>
            <p class="text-gray-600 mt-2">{member.bio}</p>

            <div class="flex space-x-4 mt-4">
              {member.socialLinks.github && (
                <a href={member.socialLinks.github} title="GitHub" target="_blank">
                  <Icon name="GitHub" class="w-6 h-6 text-gray-600 hover:text-gray-800" />
                </a>
              )}
              {member.socialLinks.mastodon && (
                <a href={member.socialLinks.mastodon} title="Mastodon" target="_blank">
                  <Icon name="Mastodon" class="w-6 h-6 text-purple-600 hover:text-purple-800" />
                </a>
              )}
              {member.socialLinks.x && (
                <a href={member.socialLinks.x} title="X" target="_blank">
                  <Icon name="X" class="w-6 h-6 text-slate-600 hover:text-slate-800" />
                </a>
              )}
              {member.socialLinks.linkedin && (
                <a href={member.socialLinks.linkedin} title="LinkedIn" target="_blank">
                  <Icon name="LinkedIn" class="w-6 h-6 text-blue-600 hover:text-blue-800" />
                </a>
              )}
              {member.socialLinks.youtube && (
                <a href={member.socialLinks.youtube} title="YouTube" target="_blank">
                  <Icon name="YouTube" class="w-6 h-6 text-red-600 hover:text-red-800" />
                </a>
              )}
              {member.socialLinks.website && (
                <a href={member.socialLinks.website} title="Website" target="_blank">
                  <Icon name="Globe" class="w-6 h-6 text-green-600 hover:text-green-800" />
                </a>
              )}
              {member.socialLinks.mail && (
                <a href={`mailto:${member.socialLinks.mail}`} title="Email" >
                  <Icon name="Mail" class="w-6 h-6 text-slate-600 hover:text-slate-800" />
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>
